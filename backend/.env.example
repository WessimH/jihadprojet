# Runtime
NODE_ENV=development
PORT=3000

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT/Session
JWT_SECRET=replace-with-a-strong-secret

# Database (used by backend)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app_db

# Optional single URL (if your ORM supports it)
DATABASE_URL=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Database (used by db service - mirrors Postgres env vars)
# If your db image expects POSTGRES_* variables, keep these in sync
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=${DB_NAME}