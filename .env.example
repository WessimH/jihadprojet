# ===========================================
# Esports Betting App - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# Run with: docker compose up

# -----------------------
# Database Configuration
# -----------------------
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=esports_betting

# Postgres container uses these (must match above)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=esports_betting

# -----------------------
# Backend Configuration
# -----------------------
NODE_ENV=development
PORT=5000

# JWT Secret (change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# -----------------------
# Frontend Configuration
# -----------------------
# API URL for frontend to connect to backend
# In Docker, use the service name 'backend'
# For SSR (server-side), use internal Docker network
NEXT_PUBLIC_API_URL=http://localhost:5000
INTERNAL_API_URL=http://backend:5000
